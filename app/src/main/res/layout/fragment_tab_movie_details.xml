<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    tools:context=".presentation.navFragments.tabDetailsScreens.tabMovieDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdTabMovieDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/poster"
        android:elevation="@dimen/elevation_4dp"
        app:cardBackgroundColor="@color/screen_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivTabDetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_220dp"
                android:scaleType="fitXY"
                android:src="@drawable/assetimg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/back_icon_nav"
                android:layout_width="@dimen/dimen_icon_36dp"
                android:layout_height="@dimen/dimen_icon_36dp"
                android:layout_marginStart="@dimen/margin_37dp"
                android:layout_marginTop="@dimen/margin_52dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_play_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/play_icon_final"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_tab_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_19dp"
        android:fontFamily="@font/lato"
        android:padding="@dimen/padding_14dp"
        android:text="@string/details_placeholder_text"
        android:textColor="@color/white"
        android:textSize="@dimen/text_24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cdTabMovieDetails" />

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_rating"
        android:layout_width="@dimen/width_29dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_tab_details"
        app:layout_constraintStart_toEndOf="@id/tv_tab_details"
        app:layout_constraintTop_toTopOf="@id/tv_tab_details">

        <TextView
            android:id="@+id/tv_rating_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/rating_4k"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_Clock"
        android:layout_width="@dimen/clock_dimen_24dp"
        android:layout_height="@dimen/clock_dimen_24dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:src="@drawable/clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tab_details" />

    <TextView
        android:id="@+id/tv_Clock_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_clock_value"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_Clock"
        app:layout_constraintStart_toEndOf="@id/iv_Clock"
        app:layout_constraintTop_toTopOf="@id/iv_Clock" />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="@dimen/clock_dimen_24dp"
        android:layout_height="@dimen/clock_dimen_24dp"
        android:layout_marginStart="@dimen/margin_19dp"
        android:src="@drawable/white_star"
        app:layout_constraintStart_toEndOf="@id/tv_Clock_value"
        app:layout_constraintTop_toTopOf="@id/tv_Clock_value" />

    <TextView
        android:id="@+id/tv_star_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_text"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintStart_toEndOf="@id/iv_star"
        app:layout_constraintTop_toTopOf="@id/iv_star" />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1dp"
        android:layout_marginHorizontal="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_18dp"
        android:background="@color/dark_grey_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_Clock" />

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/lato"
        android:text="@string/release_date"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalLine" />

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_56dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/lato"
        android:text="@string/genre"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toEndOf="@id/tvReleaseDate"
        app:layout_constraintTop_toBottomOf="@id/horizontalLine" />

    <TextView
        android:id="@+id/tvReleaseDate_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/lato"
        android:text="@string/december_9_2017"
        android:textColor="#BCBCBC"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintStart_toStartOf="@id/tvReleaseDate"
        app:layout_constraintTop_toBottomOf="@id/tvReleaseDate" />

    <RelativeLayout
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintStart_toStartOf="@id/tvGenre"
        app:layout_constraintTop_toBottomOf="@id/tvGenre">

        <View
            android:id="@+id/rectangle_4"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="@dimen/height_25dp"
            android:background="@drawable/rectangle_4"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/action_detail"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnSci_Fi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_constraintStart_toEndOf="@id/btnAction"
        app:layout_constraintTop_toTopOf="@id/btnAction">

        <View
            android:id="@+id/rectangle_5"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="@dimen/height_25dp"
            android:background="@drawable/rectangle_4"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textSciFi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sci_fi"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/horizontalLine2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1dp"
        android:layout_marginHorizontal="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_18dp"
        android:background="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReleaseDate_value" />

    <TextView
        android:id="@+id/synposis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/lato"
        android:text="@string/synopsis"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalLine2" />

    <TextView
        android:id="@+id/synopsis_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:fontFamily="@font/lato"
        android:padding="@dimen/padding_6dp"
        android:text="@string/synopsis_detail"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintStart_toStartOf="@id/synposis_title"
        app:layout_constraintTop_toBottomOf="@id/synposis_title" />

    <TextView
        android:id="@+id/relatedMovies_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/lato"
        android:text="@string/related_movies"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/synopsis_description" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontalRv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:scrollbars="horizontal"
        app:layout_constraintStart_toStartOf="@id/relatedMovies_title"
        app:layout_constraintTop_toBottomOf="@id/relatedMovies_title"
        tools:listitem="@layout/item_movie_details" />


</androidx.constraintlayout.widget.ConstraintLayout>