<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/movie_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_20dp"
        app:cardCornerRadius="@dimen/radius_15dp"
        app:cardElevation="@dimen/elevation_4dp" >

        <ImageView
            android:id="@+id/movie_card_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher_foreground"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Title"
        android:fontFamily="@font/lato"
        android:textSize="@dimen/text_16sp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_12dp"
        app:layout_constraintTop_toBottomOf="@id/movie_card"
        app:layout_constraintStart_toStartOf="@id/movie_card" />


</androidx.constraintlayout.widget.ConstraintLayout>